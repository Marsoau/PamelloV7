<Page x:Class="PamelloV7.Client.Pages.ConnectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PamelloV7.Client.Pages"
      xmlns:components="clr-namespace:PamelloV7.Client.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:Background="White"
      Title="ConnectionPage">
    <Grid HorizontalAlignment="Center" Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <StackPanel x:Name="StackPanel_ServerList" MinWidth="320" Margin="0,0,4,0">
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="1" Margin="0,4,0,0">
            <Button Content="Add Server..." Padding="4 0"/>
        </Grid>
    </Grid>
</Page>
