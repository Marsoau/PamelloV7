<Page x:Class="PamelloV7.Client.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PamelloV7.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="AuthorizationPage">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TextBox_Code" Grid.Column="0"/>
                <Button x:Name="Button_Authorize" Grid.Column="1" Content="Authorize" Margin="4,0,0,0" Padding="4,0" Click="Button_Authorize_Click"/>
            </Grid>

            <ScrollViewer Grid.Row="1" Grid.RowSpan="2" Margin="0,4,0,0">
                <StackPanel x:Name="StackPanel_TokenList" MinWidth="320" MinHeight="56" Margin="0,0,4,0">
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Button Content="Disconnect" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="4,0" Margin="4"/>
    </Grid>
</Page>
