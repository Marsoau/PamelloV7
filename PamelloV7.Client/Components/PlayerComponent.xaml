<UserControl x:Class="PamelloV7.Client.Components.PlayerComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PamelloV7.Client.Components"
             mc:Ignorable="d" 
             Height="24"
             d:DesignWidth="300"
             Background="#F0F0F0"
             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave"
             MouseUp="UserControl_MouseUp"
             Loaded="UserControl_Loaded">
    <Grid>
        <TextBlock Grid.Column="0" x:Name="TextBlock_PlayerName" Text="Player Name" VerticalAlignment="Center" Margin="4,0,0,0" FontSize="13" FontWeight="Bold" Foreground="#212121"/>
    </Grid>
</UserControl>
